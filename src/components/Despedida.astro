---
// ConfirmarAsistencia.astro
---

<section class="py-8 md:py-16 relative overflow-hidden">
  <div class="w-full px-4 md:px-8">
    <!-- CONTENEDOR PRINCIPAL CON PERGAMINO -->
    <div
      class="relative flex items-center justify-center"
      id="contenedor-confirmar"
    >
      <!-- PERGAMINO CON TEXTO -->
      <div class="relative w-full max-w-md" id="pergamino-confirmar-container">
        <!-- IMAGEN DEL PERGAMINO -->
        <div class="relative w-full">
          <img
            src="/imagenes/pergamino2.png"
            alt="Pergamino decorativo"
            class="w-full h-auto object-contain"
          />

          <!-- TEXTO SOBRE EL PERGAMINO -->
          <div
            class="absolute inset-0 flex items-center justify-center px-8 sm:px-12 md:px-16"
          >
            <div class="w-full py-8 md:py-12" id="contenido-confirmar">
              <!-- TÃTULO -->
              <div id="titulo-confirmar" class="mb-6">
                <h3
                  class="font-charm text-2xl sm:text-3xl md:text-4xl text-[#2c1810] uppercase tracking-wider text-center font-bold leading-tight"
                >
                  Confirma<br />tu asistencia
                </h3>
              </div>

              <!-- TEXTO DESCRIPTIVO -->
              <div id="texto-confirmar" class="mb-8">
                <p
                  class="font-charm text-lg sm:text-base md:text-lg text-[#4a3428] text-center leading-relaxed px-2"
                >
                  tu presencia serÃ¡ parte de esta historia encantada.
                  Agradeceremos confirmar su asistencia
                </p>
              </div>

              <!-- BOTÃ“N CONFIRMAR -->
              <div id="boton-confirmar" class="flex justify-center">
                <a
                  href="https://wa.link/10aa0e"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex
                items-center gap-2 px-6 py-3 bg-gradient-to-r from-[#6b4423]
                to-[#4a3018] text-white font-charm text-base md:text-lg
                uppercase tracking-wider rounded-full shadow-lg hover:shadow-2xl
                transition-all duration-300 hover:scale-105 hover:from-[#7d5129]
                hover:to-[#5a3820]"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="w-5 h-5"
                    fill="currentColor"
                    viewBox="0 0 448 512"
                  >
                    <path
                      d="M380.9 97.1C339 55.1 283.2 32 223.9 32c-122.4 0-222 99.6-222 222 0 39.1 10.2 77.3 29.6 111L0 480l117.7-30.9c32.4 17.7 68.9 27 106.1 27h.1c122.3 0 224.1-99.6 224.1-222 0-59.3-25.2-115-67.1-157zm-157 341.6c-33.2 0-65.7-8.9-94-25.7l-6.7-4-69.8 18.3L72 359.2l-4.4-7c-18.5-29.4-28.2-63.3-28.2-98.2 0-101.7 82.8-184.5 184.6-184.5 49.3 0 95.6 19.2 130.4 54.1 34.8 34.9 56.2 81.2 56.1 130.5 0 101.8-84.9 184.6-186.6 184.6zm101.2-138.2c-5.5-2.8-32.8-16.2-37.9-18-5.1-1.9-8.8-2.8-12.5 2.8-3.7 5.6-14.3 18-17.6 21.8-3.2 3.7-6.5 4.2-12 1.4-32.6-16.3-54-29.1-75.5-66-5.7-9.8 5.7-9.1 16.3-30.3 1.8-3.7.9-6.9-.5-9.7-1.4-2.8-12.5-30.1-17.1-41.2-4.5-10.8-9.1-9.3-12.5-9.5-3.2-.2-6.9-.2-10.6-.2-3.7 0-9.7 1.4-14.8 6.9-5.1 5.6-19.4 19-19.4 46.3 0 27.3 19.9 53.7 22.6 57.4 2.8 3.7 39.1 59.7 94.8 83.8 35.2 15.2 49 16.5 66.6 13.9 10.7-1.6 32.8-13.4 37.4-26.4 4.6-13 4.6-24.1 3.2-26.4-1.3-2.5-5-3.9-10.5-6.6z"
                    ></path>
                  </svg>
                  Confirmar
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    if (typeof window !== "undefined") {
      document.addEventListener("DOMContentLoaded", () => {
        console.log("ðŸ“œ Iniciando animaciÃ³n de confirmaciÃ³n de asistencia...");

        // ESTADO INICIAL - Todo oculto
        gsap.set("#pergamino-confirmar-container", {
          opacity: 0,
          scale: 0.85,
          y: 40,
        });
        gsap.set("#titulo-confirmar", { opacity: 0, y: 20 });
        gsap.set("#texto-confirmar", { opacity: 0, y: 30 });
        gsap.set("#boton-confirmar", { opacity: 0, scale: 0.8 });

        // ANIMACIÃ“N AL HACER SCROLL
        ScrollTrigger.create({
          trigger: "#contenedor-confirmar",
          start: "top 85%",
          end: "top 20%",

          onEnter: () => {
            const tl = gsap.timeline();

            // Pergamino aparece
            tl.to("#pergamino-confirmar-container", {
              opacity: 1,
              scale: 1,
              y: 0,
              duration: 1,
              ease: "power3.out",
            })
              // TÃ­tulo aparece
              .to(
                "#titulo-confirmar",
                {
                  opacity: 1,
                  y: 0,
                  duration: 0.6,
                  ease: "power2.out",
                },
                "-=0.5",
              )
              // Texto aparece
              .to(
                "#texto-confirmar",
                {
                  opacity: 1,
                  y: 0,
                  duration: 0.6,
                  ease: "power2.out",
                },
                "-=0.3",
              )
              // BotÃ³n aparece con rebote
              .to(
                "#boton-confirmar",
                {
                  opacity: 1,
                  scale: 1,
                  duration: 0.6,
                  ease: "back.out(1.5)",
                },
                "-=0.2",
              );

            // EFECTO DE PULSACIÃ“N EN EL BOTÃ“N
            gsap.to("#boton-confirmar a", {
              scale: 1.05,
              duration: 1.5,
              ease: "sine.inOut",
              yoyo: true,
              repeat: -1,
            });

            // BRILLO SUTIL EN EL TÃTULO
            gsap.to("#titulo-confirmar h3", {
              textShadow:
                "0 1px 3px rgba(44, 24, 16, 0.3), 0 2px 6px rgba(44, 24, 16, 0.2)",
              duration: 2,
              ease: "sine.inOut",
              yoyo: true,
              repeat: -1,
            });
          },

          onLeaveBack: () => {
            // Resetear todo al salir
            gsap.killTweensOf("#boton-confirmar a, #titulo-confirmar h3");

            const tl = gsap.timeline();

            tl.to("#boton-confirmar, #texto-confirmar, #titulo-confirmar", {
              opacity: 0,
              duration: 0.4,
              ease: "power2.in",
            }).to(
              "#pergamino-confirmar-container",
              {
                opacity: 0,
                scale: 0.85,
                y: 40,
                duration: 0.5,
                ease: "power2.in",
              },
              "-=0.3",
            );
          },
        });

        console.log("ðŸ“œâœ¨ Â¡AnimaciÃ³n de confirmaciÃ³n activada!");
      });
    }
  </script>

  <style>
    /* Asegurar que el pergamino se vea completo */
    #pergamino-confirmar-container {
      width: 100%;
    }

    /* Efecto hover en el botÃ³n */
    #boton-confirmar a {
      position: relative;
      overflow: hidden;
    }

    #boton-confirmar a::before {
      content: "";
      position: absolute;
      top: 50%;
      left: 50%;
      width: 0;
      height: 0;
      border-radius: 50%;
      background: rgba(255, 255, 255, 0.15);
      transform: translate(-50%, -50%);
      transition:
        width 0.6s,
        height 0.6s;
    }

    #boton-confirmar a:hover::before {
      width: 300px;
      height: 300px;
    }

    /* Ajustes responsivos del contenido */
    @media (max-width: 640px) {
      #contenido-confirmar {
        padding: 1.5rem 0;
      }
    }

    @media (min-width: 641px) and (max-width: 768px) {
      #contenido-confirmar {
        padding: 2rem 0;
      }
    }
  </style>
</section>
