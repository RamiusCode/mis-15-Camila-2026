---
// Componente de sección para quinceañera - Todo centrado
---

<section
    class="min-h-screen w-full bg-gradient-to-b flex items-center justify-center p-4"
>
    <div class="max-w-lg w-full flex flex-col items-center justify-center">
        <!-- Imagen marco.png -->
        <div class="w-full flex justify-center mb-8">
            <img
                src="/imagenes/marcodorado.webp"
                alt="Marco de 15 años"
                class="w-64 h-auto mx-auto"
            />
        </div>

        <!-- Imagen nombre.png -->
        <div class="w-full flex justify-center mb-6">
            <img
                src="/imagenes/nombre.png"
                alt="Camila"
                class="h-24 w-auto mx-auto"
            />
        </div>

        <!-- Texto "Urita camacho" -->
        <div class="w-full flex justify-center mb-8">
            <p class="text-4xl text-white text-center font-crimson">
                Urita camacho
            </p>
        </div>

        <!-- Separador dorado -->
        <div class="w-full flex justify-center">
            <img
                src="/imagenes/separador.png"
                alt="Separador"
                class="w-56 max-w-xs h-auto mx-auto"
            />
        </div>
    </div>
</section>
